{
    "manifest_version": 3,
    "name": "Chopper",
    "version": "1.0",
    "description": "Adds to your Chopping List",
    "icons": {
        "48": "icons/chopperx48.png"
    },
    "homepage_url": "http://localhost:8000",
    "permissions": [
        "activeTab",
        "scripting"
    ],
    "host_permissions": [
        "http://localhost:8000/*",
        "https://localhost:8000/*"
    ],
    "action": {
        "default_icon": "icons/chopperx48.png",
        "default_title": "Chopper",
        "default_popup": "popup/chopper.html"
    },
    "browser_specific_settings": {
        "gecko": {
            "id": "chopper@chopping_list.org"
        }
    },
    "content_security_policy": {
        "extension_pages": "script-src 'self'; object-src 'self'; connect-src http://localhost:8000 https://localhost:8000"
    }
}
